@page
@model InstructorIndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<h1 class="mt-4 mb-3">
    <i class="bi bi-person-circle me-2"></i>Welcome, <strong>@Model.InstructorName</strong>
</h1>

<div class="alert alert-info shadow-sm">
    <strong><i class="bi bi-calendar2-week me-1"></i>Active Term:</strong>
    <span class="fw-bold text-primary">@Model.ActiveTerm</span>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body text-center">
                <div class="fs-5"><i class="bi bi-check2-circle me-2"></i>Approved Reservations</div>
                <div class="fs-1 fw-bold">@Model.ApprovedCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-dark bg-warning shadow-sm">
            <div class="card-body text-center">
                <div class="fs-5"><i class="bi bi-hourglass-split me-2"></i>Pending Requests</div>
                <div class="fs-1 fw-bold">@Model.PendingCount</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-3 d-grid">
        <a class="btn btn-outline-success btn-lg" asp-page="/Instructor/ReservationRequest">
            <i class="bi bi-plus-circle me-1"></i>New Reservation
        </a>
    </div>
    <div class="col-md-3 d-grid">
        <a class="btn btn-outline-primary btn-lg" asp-page="/Instructor/MyReservations">
            <i class="bi bi-list-check me-1"></i>My Reservations
        </a>
    </div>
    <div class="col-md-3 d-grid">
        <a class="btn btn-outline-secondary btn-lg" asp-page="/Instructor/Calendar">
            <i class="bi bi-calendar-week me-1"></i>View Calendar
        </a>
    </div>
    <div class="col-md-3 d-grid">
        <a class="btn btn-outline-info btn-lg" asp-page="/Instructor/SubmitFeedback">
            <i class="bi bi-chat-dots me-1"></i>Submit Feedback
        </a>
    </div>
</div>
