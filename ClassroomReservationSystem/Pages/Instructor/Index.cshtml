@page
@model InstructorIndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="mb-4">Welcome, <strong>@Model.InstructorName</strong></h2>

<div class="alert alert-info">
    <strong>Active Term:</strong> <span class="fw-bold text-primary">@Model.ActiveTerm</span>
</div>

<div class="row text-center mb-4">
    <div class="col-md-6">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5>Approved Reservations</h5>
                <h2>@Model.ApprovedCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h5>Pending Requests</h5>
                <h2>@Model.PendingCount</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-2">
        <a class="btn btn-outline-success w-100" asp-page="/Instructor/ReservationRequest">
            <i class="bi bi-plus-circle me-1"></i> New Reservation
        </a>
    </div>
    <div class="col-md-3 mb-2">
        <a class="btn btn-outline-primary w-100" asp-page="/Instructor/MyReservations">
            <i class="bi bi-list-check me-1"></i> My Reservations
        </a>
    </div>
    <div class="col-md-3 mb-2">
        <a class="btn btn-outline-secondary w-100" asp-page="/Instructor/Calendar">
            <i class="bi bi-calendar-week me-1"></i> View Calendar
        </a>
    </div>
    <div class="col-md-3 mb-2">
        <a class="btn btn-outline-info w-100" asp-page="/Instructor/SubmitFeedback">
            <i class="bi bi-chat-dots me-1"></i> Submit Feedback
        </a>
    </div>
</div>
