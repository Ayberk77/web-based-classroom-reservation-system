@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@model EditInstructorModel
@{
    ViewData["Title"] = "Edit Instructor";
    Layout = "_Layout";
}
@attribute [Authorize(Roles = "Admin")]

<h1 class="mt-4 mb-4"><i class="bi bi-person-lines-fill me-2"></i>Edit Instructor</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="card shadow-sm">
    <div class="card-body">
        <partial name="_ValidationScriptsPartial" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <form method="post">
            <input type="hidden" asp-for="Input.Id" />

            <div class="mb-3">
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">New Password <span class="text-muted small">(leave blank to keep current)</span></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save me-1"></i>Save Changes
                </button>
                <a asp-page="/Admin/Users" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>
