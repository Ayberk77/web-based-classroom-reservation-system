@page "{id:int}"
@model FeedbackDetailModel
@{
    ViewData["Title"] = "Classroom Feedback Detail";
    Layout = "_Layout";
}

<h1 class="mt-4">Feedback for: @Model.ClassroomName</h1>

@if (Model.Feedbacks.Count == 0)
{
    <div class="alert alert-info">No feedback available for this classroom.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Rating</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model.Feedbacks)
            {
                <tr>
                    <td>@f.InstructorName</td>
                    <td>@f.Rating</td>
                    <td>@f.Comment</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-page="Feedback" class="btn btn-secondary">Back</a>