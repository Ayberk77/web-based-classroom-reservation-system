@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@model EditTermModel
@{
    ViewData["Title"] = "Edit Term";
    Layout = "_Layout";
}
@attribute [Authorize(Roles = "Admin")]

<h1 class="mt-4 mb-4"><i class="bi bi-pencil-square me-2"></i>Edit Term</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="card shadow-sm">
    <div class="card-body">
        <partial name="_ValidationScriptsPartial" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <form method="post">
            <input type="hidden" asp-for="Term.Id" />
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Term.Name" class="form-label">Term Name</label>
                    <input asp-for="Term.Name" class="form-control" />
                    <span asp-validation-for="Term.Name" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Term.StartDate" class="form-label">Start Date</label>
                    <input asp-for="Term.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="Term.StartDate" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Term.EndDate" class="form-label">End Date</label>
                    <input asp-for="Term.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="Term.EndDate" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save me-1"></i>Update Term
                </button>
                <a asp-page="/Admin/Terms" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>
