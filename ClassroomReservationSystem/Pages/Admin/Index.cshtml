@page
@using Microsoft.AspNetCore.Authorization
@model AdminIndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}
@attribute [Authorize(Roles = "Admin")]

<h1 class="mt-4 mb-4">Admin Dashboard</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm text-white bg-primary">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="fs-5"><i class="bi bi-people-fill me-2"></i>Instructors</div>
                <div class="fs-3 fw-bold">@Model.InstructorCount</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm text-dark bg-warning">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="fs-5"><i class="bi bi-hourglass-split me-2"></i>Pending Reservations</div>
                <div class="fs-3 fw-bold">@Model.PendingReservations</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm text-white bg-success">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="fs-5"><i class="bi bi-calendar2-week-fill me-2"></i>Active Term</div>
                <div class="fs-4 fw-bold">@Model.ActiveTerm</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm text-white bg-info">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="fs-5"><i class="bi bi-door-open-fill me-2"></i>Classrooms</div>
                <div class="fs-3 fw-bold">@Model.ClassroomCount</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4 d-grid">
        <a class="btn btn-outline-primary btn-lg" asp-page="/Admin/Terms">
            <i class="bi bi-calendar-check me-2"></i>Manage Terms
        </a>
    </div>
    <div class="col-md-4 d-grid">
        <a class="btn btn-outline-secondary btn-lg" asp-page="/Admin/Users">
            <i class="bi bi-person-badge me-2"></i>Manage Instructors
        </a>
    </div>
    <div class="col-md-4 d-grid">
        <a class="btn btn-outline-warning btn-lg" asp-page="/Admin/Reservations">
            <i class="bi bi-clock-history me-2"></i>Review Reservations
        </a>
    </div>
</div>
